<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">

    <property name="uuid_type" value="uuid" dbms="postgresql"/>
    <property name="uuid_function" value="gen_random_uuid()" dbms="postgresql"/>
    <property name="now" value="now()" dbms="postgresql"/>

    <changeSet id="1" author="william.chan" labels="init,department">
        <comment>department table</comment>
        <createTable tableName="department">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" uniqueConstraintName="pk_department"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" unique="true" uniqueConstraintName="nn_u_name"/>
            </column>
            <column name="assigned_location" type="varchar(750)">
                <constraints nullable="false" uniqueConstraintName="nn_assigned_location"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="liquibase-docs">
        <insert tableName="department">
            <column name="name" value="IT" />
            <column name="assigned_location" value="16F" />
        </insert>
        <insert tableName="department">
            <column name="name" value="Marketing" />
            <column name="assigned_location" value="7F" />
        </insert>
        <insert tableName="department">
            <column name="name" value="Food" />
            <column name="assigned_location" value="Bridge" />
        </insert>
    </changeSet>

</databaseChangeLog>